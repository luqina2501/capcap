---
import { supabase } from "../db/supabase";
import "../styles/global.css";

// Enums
const PAGE_TYPES = [
  "cover",
  "title_page",
  "toc",
  "content",
  "exercise",
  "blank",
  "other",
];
const OBJECTS_PRESENT_ENUM = [
  "person_child",
  "person_adult",
  "student",
  "teacher",
  "animal_generic",
  "animal_pet",
  "animal_farm",
  "animal_wild",
  "food_fruit",
  "food_vegetable",
  "food_bundle",
  "book",
  "notebook",
  "pen",
  "pencil",
  "school_bag",
  "clock_analog",
  "clock_digital",
  "countable_object",
  "grouped_object",
  "table",
  "chart",
  "illustration_scene",
];
const ERROR_TAGS = [
  "OCR_MISSING",
  "OCR_WRONG",
  "OCR_UNREADABLE",
  "OCR_NOT_CONTEXTUALIZED",
  "HALLUCINATION",
  "WRONG_LAYOUT",
  "SUBJECTIVE_REASONING",
  "TOO_LONG_SHORT",
  "DETAIL_INCOHERENT_FLOW",
  "MISQUOTED_TEXT",
  "COUNTING_WRONG",
  "CLOCK_READING_WRONG",
  "ID_ISSUE",
  "IMAGE_MISMATCH",
];

let message = "";
let finished = false;

if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const id = formData.get("id");
    const page_type = formData.get("page_type");
    const has_text = formData.has("has_text");
    const has_table = formData.has("has_table");
    const objects_present = formData.getAll("objects_present");
    const error_tags = formData.getAll("error_tags");
    const notes = formData.get("notes");
    const change_log = formData.get("change_log");

    const { error: updateError } = await supabase
      .from("dataset")
      .update({
        page_type,
        has_text,
        has_table,
        objects_present,
        error_tags,
        notes: notes ? notes : null,
        change_log: change_log ? change_log : null,
        is_checked: true,
      })
      .eq("id", id);

    if (updateError) {
      console.error("Update Error:", updateError);
      message = "Error updating row: " + updateError.message;
    } else {
      message = "Successfully saved!";
    }
  } catch (e) {
    console.error(e);
    message = "Server error processing request.";
  }
}

let dataRow = null;
if (!finished) {
  const priorities = ["high", "normal", "low"];
  for (const p of priorities) {
    const { data } = await supabase
      .from("dataset")
      .select("*")
      .eq("is_checked", false)
      .eq("review_priority", p)
      .limit(50);
    if (data && data.length) {
      dataRow = data[Math.floor(Math.random() * data.length)];
      break;
    }
  }
  if (!dataRow) {
    const { count } = await supabase
      .from("dataset")
      .select("*", { count: "exact", head: true })
      .eq("is_checked", false);
    if (count === 0) finished = true;
  }
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Dataset Review</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      ::selection {
        background-color: #cbd5e1;
        color: #0f172a;
      }
    </style>
  </head>
  <body
    class="bg-white text-slate-900 font-['Inter'] h-screen overflow-hidden antialiased"
  >
    {
      finished ? (
        <div class="flex flex-col items-center justify-center h-full w-full bg-slate-50">
          <div class="max-w-md text-center space-y-6">
            <h1 class="text-3xl font-bold text-slate-900">All Done</h1>
            <p class="text-slate-500">
              You've successfully reviewed the entire dataset.
            </p>
            <button
              onclick="window.location.reload()"
              class="px-6 py-2 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 transition-colors"
            >
              Check Again
            </button>
          </div>
        </div>
      ) : dataRow ? (
        <div class="flex h-full">
          {/* Left: Image (5/12) */}
          <div class="w-5/12 bg-zinc-900 flex flex-col relative">
            <div class="absolute top-0 left-0 right-0 p-4 flex justify-between items-center bg-zinc-900/90 backdrop-blur-sm z-10 border-b border-white/5">
              <span class="font-mono text-xs text-zinc-500">
                ID: {dataRow.id}
              </span>
              <span
                class={`text-xs font-medium px-2 py-0.5 rounded ${
                  dataRow.review_priority === "high"
                    ? "bg-rose-500/10 text-rose-400"
                    : dataRow.review_priority === "normal"
                      ? "bg-blue-500/10 text-blue-400"
                      : "bg-zinc-700 text-zinc-400"
                }`}
              >
                {dataRow.review_priority.toUpperCase()} PRIORITY
              </span>
            </div>
            <div class="flex-1 flex items-center justify-center p-6 overflow-hidden">
              <img
                src={`${import.meta.env.SUPABASE_URL}/storage/v1/object/public/images/${dataRow.id}.png`}
                alt="Dataset Image"
                class="max-w-full max-h-full object-contain shadow-2xl"
              />
            </div>
          </div>

          {/* Right: Form (7/12) */}
          <div class="w-7/12 bg-white border-l border-slate-200 flex flex-col">
            <div class="px-8 py-5 border-b border-slate-100 flex justify-between items-baseline">
              <h2 class="font-semibold text-slate-900 text-lg">Review Item</h2>
              <span class="text-xs text-slate-400 uppercase tracking-widest font-medium">
                Data Validation
              </span>
            </div>

            {message && (
              <div class="mx-8 mt-6 p-4 bg-emerald-50 text-emerald-700 text-sm rounded-lg border border-emerald-100 flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  />
                </svg>
                {message}
              </div>
            )}

            <form method="POST" class="flex-1 overflow-y-auto p-8 space-y-10">
              <input type="hidden" name="id" value={dataRow.id} />

              {/* Classification */}
              <div class="space-y-8">
                <div class="flex items-center space-x-2 border-b border-slate-100 pb-2">
                  <h3 class="text-xs font-bold text-slate-500 uppercase tracking-wider">
                    Classification
                  </h3>
                </div>

                {/* Page Type Verify */}
                <div class="bg-slate-50 p-5 rounded-xl border border-slate-100">
                  <div class="flex justify-between items-center mb-3">
                    <span class="text-sm font-medium text-slate-700">
                      Page Type:{" "}
                      <span class="font-bold text-slate-900">
                        {dataRow.page_type.replace("_", " ")}
                      </span>
                    </span>
                    <div class="flex items-center space-x-3">
                      <span class="text-xs font-medium text-slate-500">
                        Correct?
                      </span>
                      <label class="inline-flex items-center cursor-pointer">
                        <>
                          <input
                            type="radio"
                            name="page_type_correct"
                            value="yes"
                            checked
                            class="text-indigo-600 focus:ring-0"
                            onchange="toggle(this, 'page_type_edit')"
                          />
                          <span class="ml-1 text-xs text-slate-600">Yes</span>
                        </>
                      </label>
                      <label class="inline-flex items-center cursor-pointer">
                        <>
                          <input
                            type="radio"
                            name="page_type_correct"
                            value="no"
                            class="text-rose-500 focus:ring-0"
                            onchange="toggle(this, 'page_type_edit')"
                          />
                          <span class="ml-1 text-xs text-slate-600">No</span>
                        </>
                      </label>
                    </div>
                  </div>
                  <div id="page_type_edit" class="hidden animate-fade-in mt-3">
                    <select
                      name="page_type"
                      class="w-full bg-white border border-slate-300 text-slate-700 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block p-2.5"
                    >
                      {PAGE_TYPES.map((type) => (
                        <option
                          value={type}
                          selected={dataRow.page_type === type}
                        >
                          {type.replace("_", " ")}
                        </option>
                      ))}
                    </select>
                  </div>
                </div>

                {/* Has Text / Table Verify */}
                <div class="grid grid-cols-2 gap-6">
                  {["has_text", "has_table"].map((key) => (
                    <div class="bg-slate-50 p-5 rounded-xl border border-slate-100">
                      <div class="flex justify-between items-center mb-2">
                        <span class="text-sm font-medium text-slate-700">
                          {key.replace("_", " ")}?
                        </span>
                        <div class="flex items-center space-x-2">
                          <label class="inline-flex items-center cursor-pointer">
                            <input
                              type="radio"
                              name={`${key}_correct`}
                              value="yes"
                              checked
                              class="text-indigo-600 focus:ring-0"
                              onchange={`toggle(this, '${key}_edit')`}
                            />
                            <span class="ml-1 text-xs text-slate-600">Yes</span>
                          </label>
                          <label class="inline-flex items-center cursor-pointer">
                            <input
                              type="radio"
                              name={`${key}_correct`}
                              value="no"
                              class="text-rose-500 focus:ring-0"
                              onchange={`toggle(this, '${key}_edit')`}
                            />
                            <span class="ml-1 text-xs text-slate-600">No</span>
                          </label>
                        </div>
                      </div>
                      <div class="text-sm font-bold text-slate-900 mb-2">
                        {dataRow[key] ? "Yes" : "No"}
                      </div>
                      <div id={`${key}_edit`} class="hidden mt-2">
                        <label class="inline-flex items-center cursor-pointer">
                          <input
                            type="checkbox"
                            name={key}
                            class="rounded border-slate-300 text-indigo-600 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                            checked={dataRow[key]}
                          />
                          <span class="ml-2 text-sm text-slate-600">
                            Override value
                          </span>
                        </label>
                      </div>
                    </div>
                  ))}
                </div>

                {/* Objects Verify */}
                <div class="bg-slate-50 p-5 rounded-xl border border-slate-100">
                  <div class="flex justify-between items-start mb-3">
                    <span class="text-sm font-medium text-slate-700">
                      Objects Present
                    </span>
                    <div class="flex items-center space-x-3">
                      <span class="text-xs font-medium text-slate-500">
                        Correct?
                      </span>
                      <label class="inline-flex items-center cursor-pointer">
                        <>
                          <input
                            type="radio"
                            name="objects_correct"
                            value="yes"
                            checked
                            class="text-indigo-600 focus:ring-0"
                            onchange="toggle(this, 'objects_edit')"
                          />
                          <span class="ml-1 text-xs text-slate-600">Yes</span>
                        </>
                      </label>
                      <label class="inline-flex items-center cursor-pointer">
                        <>
                          <input
                            type="radio"
                            name="objects_correct"
                            value="no"
                            class="text-rose-500 focus:ring-0"
                            onchange="toggle(this, 'objects_edit')"
                          />
                          <span class="ml-1 text-xs text-slate-600">No</span>
                        </>
                      </label>
                    </div>
                  </div>

                  <div class="flex flex-wrap gap-2 mb-2">
                    {dataRow.objects_present &&
                    dataRow.objects_present.length > 0 ? (
                      dataRow.objects_present.map((obj) => (
                        <span class="bg-white border border-slate-200 text-slate-600 px-2 py-1 rounded text-xs font-medium shadow-sm">
                          {obj.replace("_", " ")}
                        </span>
                      ))
                    ) : (
                      <span class="text-slate-400 italic text-xs">
                        No objects listed
                      </span>
                    )}
                  </div>

                  <div
                    id="objects_edit"
                    class="hidden mt-4 pt-4 border-t border-slate-200"
                  >
                    <div class="grid grid-cols-2 gap-2 max-h-48 overflow-y-auto pr-2 custom-scrollbar">
                      {OBJECTS_PRESENT_ENUM.map((obj) => (
                        <label class="flex items-center space-x-2 cursor-pointer p-1 hover:bg-slate-100 rounded">
                          <input
                            type="checkbox"
                            name="objects_present"
                            value={obj}
                            checked={
                              dataRow.objects_present &&
                              dataRow.objects_present.includes(obj)
                            }
                            class="rounded border-slate-300 text-indigo-600 shadow-sm focus:ring-0"
                          />
                          <span class="text-xs text-slate-600">
                            {obj.replace("_", " ")}
                          </span>
                        </label>
                      ))}
                    </div>
                  </div>
                </div>
              </div>

              {/* Verification Section */}
              <div class="space-y-8 pt-6 border-t border-slate-100">
                <div class="flex items-center space-x-2 border-b border-slate-100 pb-2">
                  <h3 class="text-xs font-bold text-slate-500 uppercase tracking-wider">
                    Content Verification
                  </h3>
                </div>

                {["caption_short", "caption_detail", "text_in_image"].map(
                  (field) => (
                    <div class="bg-white">
                      <div class="flex justify-between items-start mb-2">
                        <span class="text-sm font-medium text-slate-900 capitalize px-2 border-l-4 border-indigo-500">
                          {field.replace("_", " ")}
                        </span>
                        <div class="flex items-center space-x-3 bg-slate-50 px-3 py-1 rounded-full border border-slate-100">
                          <span class="text-xs text-slate-400 font-medium uppercase tracking-wider">
                            Is this correct?
                          </span>
                          <label class="inline-flex items-center cursor-pointer hover:bg-white px-2 py-0.5 rounded transition-colors">
                            <input
                              type="radio"
                              name={`${field}_correct`}
                              value="yes"
                              checked
                              class="text-indigo-600 focus:ring-0"
                              onchange={`toggle(this, '${field}_err')`}
                            />
                            <span class="ml-1 text-xs text-slate-700 font-semibold">
                              Yes
                            </span>
                          </label>
                          <label class="inline-flex items-center cursor-pointer hover:bg-white px-2 py-0.5 rounded transition-colors">
                            <input
                              type="radio"
                              name={`${field}_correct`}
                              value="no"
                              class="text-rose-500 focus:ring-0"
                              onchange={`toggle(this, '${field}_err')`}
                            />
                            <span class="ml-1 text-xs text-slate-700 font-semibold">
                              No
                            </span>
                          </label>
                        </div>
                      </div>

                      <div class="bg-slate-50 p-4 rounded-lg border border-slate-200 mb-2">
                        <p
                          class="text-sm text-slate-700 whitespace-pre-wrap max-h-60 overflow-y-auto font-mono leading-relaxed"
                          title={dataRow[field]}
                        >
                          {dataRow[field] || (
                            <span class="italic text-slate-400">Empty</span>
                          )}
                        </p>
                      </div>

                      <div
                        id={`${field}_err`}
                        class="hidden mt-3 p-4 bg-rose-50 rounded-lg border border-rose-100 animate-fade-in"
                      >
                        <p class="text-xs font-bold text-rose-700 uppercase mb-2 tracking-wide">
                          WHAT IS WRONG?
                        </p>
                        <div class="grid grid-cols-2 gap-2">
                          {ERROR_TAGS.map((tag) => (
                            <label class="flex items-center space-x-2 cursor-pointer hover:bg-white/50 p-1 rounded transition-colors">
                              <input
                                type="checkbox"
                                name="error_tags"
                                value={tag}
                                class="rounded border-rose-300 text-rose-500 focus:ring-0 w-3.5 h-3.5"
                              />
                              <span class="text-xs text-rose-800 font-medium lowercase first-letter:uppercase">
                                {tag.replace("OCR_", "").replace(/_/g, " ")}
                              </span>
                            </label>
                          ))}
                        </div>
                      </div>
                    </div>
                  ),
                )}
              </div>

              {/* Notes & Changelog */}
              <div class="pt-6 border-t border-slate-100 space-y-6">
                <div class="bg-amber-50/50 p-5 rounded-xl border border-amber-100">
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-sm font-medium text-slate-800">
                      Notes Correct?
                    </span>
                    <div class="flex items-center space-x-2">
                      <label class="inline-flex items-center cursor-pointer">
                        <>
                          <input
                            type="radio"
                            name="notes_correct"
                            value="yes"
                            checked
                            class="text-indigo-600 focus:ring-0"
                            onchange="toggle(this, 'notes_edit')"
                          />
                          <span class="ml-1 text-xs text-slate-600">Yes</span>
                        </>
                      </label>
                      <label class="inline-flex items-center cursor-pointer">
                        <>
                          <input
                            type="radio"
                            name="notes_correct"
                            value="no"
                            class="text-amber-500 focus:ring-0"
                            onchange="toggle(this, 'notes_edit')"
                          />
                          <span class="ml-1 text-xs text-slate-600">No</span>
                        </>
                      </label>
                    </div>
                  </div>
                  <div id="notes_edit" class="hidden mt-2">
                    <textarea
                      name="notes"
                      rows="3"
                      class="w-full text-sm border-amber-200 rounded-md shadow-sm focus:border-amber-400 focus:ring focus:ring-amber-200 focus:ring-opacity-50 bg-white"
                      placeholder="Enter corrected notes..."
                    >
                      {dataRow.notes || ""}
                    </textarea>
                  </div>
                </div>

                <div id="changelog_container" class="hidden">
                  <label class="block text-sm font-bold text-slate-700 mb-1">
                    Change Log
                  </label>
                  <input
                    type="text"
                    name="change_log"
                    class="w-full text-sm border-slate-300 rounded-lg shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-3"
                    placeholder="Explain why values were changed..."
                  />
                </div>
              </div>

              <div class="sticky bottom-0 bg-white pt-4 pb-2 border-t border-slate-100 -mx-8 px-8">
                <button
                  type="submit"
                  class="w-full flex justify-center items-center py-3.5 px-4 border border-transparent rounded-xl shadow-lg text-sm font-bold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all transform hover:-translate-y-0.5"
                >
                  Save & Continue
                  <svg
                    class="ml-2 -mr-1 w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M14 5l7 7m0 0l-7 7m7-7H3"
                    />
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      ) : (
        <div class="flex items-center justify-center h-full text-slate-400 text-sm">
          Loading dataset...
        </div>
      )
    }
    <script is:inline>
      function toggle(radio, id) {
        const el = document.getElementById(id);
        const cl = document.getElementById("changelog_container");

        // Logic: Show edit field if "No" selected
        if (radio.value === "no") {
          el.classList.remove("hidden");
          cl.classList.remove("hidden");
        } else {
          el.classList.add("hidden");
        }

        // Logic: Only hide changelog if NO "no" radios are selected across the entire form
        const anyNo = document.querySelectorAll(
          'input[type="radio"][value="no"]:checked',
        );
        if (anyNo.length === 0) {
          cl.classList.add("hidden");
        } else {
          cl.classList.remove("hidden");
        }
      }
    </script>
  </body>
</html>
